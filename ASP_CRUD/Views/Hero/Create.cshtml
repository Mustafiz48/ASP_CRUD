@model ASP_CRUD.Models.Hero

<form method="post" asp-action="Create">

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name">Name</label>
            <input class="form-control" asp-for="Name" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger" />

        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Nemesis">Nemesis</label>
            <input class="form-control" asp-for="Nemesis" placeholder="Nemesis">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Power">Power</label>
            <input class="form-control" asp-for="Power" placeholder="Power">
            <span asp-validation-for="Power" class="text-danger"></span>
        </div>
    </div>



    <button type="submit" class="btn btn-primary">Add</button>
</form>

@* The following script is for clientside validation *@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}